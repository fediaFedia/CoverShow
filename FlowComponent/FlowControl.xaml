<UserControl x:Class="Wpf.CoverShow.FlowComponent.FlowControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
  <Grid ClipToBounds="True">
    <Grid.Background>
      <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
        <LinearGradientBrush.GradientStops>
          <GradientStop x:Name="TopGradientStop" Color="Black" Offset="0"/>
          <GradientStop x:Name="BottomGradientStop" Color="#222222" Offset="1"/>
        </LinearGradientBrush.GradientStops>
      </LinearGradientBrush>
    </Grid.Background>
    <Viewport3D x:Name="viewPort" Grid.Column="0" Grid.Row="0" ClipToBounds="False" MouseDown="viewPort_MouseDown" MouseMove="viewPort_MouseMove">
      <Viewport3D.Camera>
        <PerspectiveCamera x:Name="camera" Position="0,-0.3,3" UpDirection="0,1,0"
          LookDirection="0,0,-1" FieldOfView="120" NearPlaneDistance="0.125"/>
      </Viewport3D.Camera>
      <Viewport3D.Children>
        <ModelVisual3D>
          <ModelVisual3D.Content>
            <DirectionalLight x:Name="Light1" Color="White" Direction="1,0,-4" />
          </ModelVisual3D.Content>
        </ModelVisual3D>
        <ModelVisual3D>
          <ModelVisual3D.Content>
            <DirectionalLight x:Name="Light2" Color="White" Direction="-1,0,-4" />
          </ModelVisual3D.Content>
        </ModelVisual3D>
        <ModelVisual3D x:Name="visualModel">
        </ModelVisual3D>
      </Viewport3D.Children>
    </Viewport3D>
    <TextBlock Text="{Binding SelectedFileName, RelativeSource={RelativeSource AncestorType=UserControl}}" 
               Foreground="White" x:Name="Label" FontSize="14" Margin="30,30,30,30" 
               HorizontalAlignment="Center" VerticalAlignment="Bottom" 
               TextTrimming="CharacterEllipsis" IsHitTestVisible="False"/>
  </Grid>
</UserControl>
