<Window x:Class="Wpf.CoverShow.TestWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="CoverShow" KeyDown="Window_KeyDown" PreviewMouseWheel="Window_PreviewMouseWheel"
    Width="1024" Height="600"
    xmlns:flow="clr-namespace:Wpf.CoverShow.FlowComponent;assembly=Wpf.CoverShow.FlowComponent">
    <Grid>
        <flow:FlowControl x:Name="flow" Margin="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"></flow:FlowControl>
        <Slider Height="3" Margin="33,0,33,12" Name="slider" VerticalAlignment="Bottom" ValueChanged="slider_ValueChanged" Focusable="False" />
        <Grid x:Name="EmptyOverlay" Background="#AA000000" Visibility="Collapsed">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="400">
                <TextBlock x:Name="EmptyMessage" Text="No supported files found in this folder." Foreground="White" FontSize="16" TextAlignment="Center" Margin="0,0,0,16"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="ChangeFolderButton" Content="Change Folder" Width="140" Margin="0,0,12,0" Click="ChangeFolder_Click"/>
                    <Button x:Name="ExitButton" Content="Exit" Width="100" Click="Exit_Click"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Window>